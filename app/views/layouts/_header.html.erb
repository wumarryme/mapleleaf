<div class="header">
  <% if current_user %>
  <div class="logout-link">
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "logout"%>
  </div>
  <div class="user">
    <span class="username"><%= current_user.email %></span>
  </div>
  <% else %>
  <div class="user">
    <%= link_to 'Sign_in', new_user_session_path, class: "logout"%>
  </div>
  <% end %>
</div>